import("//build/ohos.gni")
import("//build/templates/abc/ohos_abc.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import("//foundation/arkui/ace_engine/frameworks/bridge/declarative_frontend/npm_op/npm_op.gni")
import("files_to_watch.gni")

npm_install_op("npm_install_x_node") {
  project_path = rebase_path("./")
}

npm_run_op("npm_build_x_node") {
  cmd = "build"
  project_path = rebase_path("./")
  watched_files = ark_x_node_files_to_watch
  out_dir = "dist"
  out_file = "jsXNode.js"
  deps = [
    # the host_toolchain is needed to avoid file corruption caused by parallel operations.
    ":npm_install_x_node($host_toolchain)"
  ]
}

ohos_abc("x_node") {
  sources = [ "$target_gen_dir/jsXNode.js" ]
  output_name = "node"
  deps = [":npm_build_x_node"]

  install_images = [ "system" ]
  module_install_dir = "etc/abc/arkui"
  subsystem_name = ace_engine_subsystem
  part_name = ace_engine_part
}
