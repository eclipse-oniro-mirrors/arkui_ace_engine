{
    "compilerOptions": {
        "package": "@ohos.arkui",
        "outDir": "build-m3-impl",
        "baseUrl": ".",
        "paths": {
            "@koalaui/common": [
                "../../incremental/common/src"
            ],
            "@koalaui/interop": [
                "../../interop/src/arkts"
            ],
            "@koalaui/runtime": [
                "../../incremental/runtime/ets"
            ],
            "@koalaui/compat": [
                "../../incremental/compat/src/arkts"
            ],
            "@koalaui/arkui-common": [
                "../../arkoala/arkui-common/src"
            ],
            "#arkcompat/*": [
                "../../arkoala/arkui-common/src/*"
            ],
            "@ohos/arkui": [
                "arkui/component"
            ],
            "#components": [
                "arkui/component/arkts"
            ],
            "#external": [
                "arkui/external/ts"
            ],
            "arkui": [
                "./src"
            ],
            "arkui.ani": [
                "arkui/ani/arkts"
            ],
            "@ohos/animator": [
                "./@ohos.animator.ts"
            ],
            "@ohos/arkui/componentUtils": [
                "./@ohos.arkui.componentUtils.ts"
            ],
            "@ohos/arkui/focusController": [
                "./@ohos.arkui.focusController.ts"
            ],
            "@ohos/arkui/inspector": [
                "./@ohos.arkui.inspector.ts"
            ],
            "@ohos/arkui/UIContext": [
                "./@ohos.arkui.UIContext.ts"
            ],
            "@ohos/measure": [
                "./@ohos.measure.ts"
            ],
            "@ohos/font/font": [
                "./@ohos.font.ts"
            ],
            "global/resource": [
                "./global/resource/resource.ts"
            ],
            "@ohos.router": [
                "./@ohos.router.ts"
            ],
            "@ohos/arkui/observer": [
                "./@ohos.arkui.observer.ts"
            ],
            "@ohos/graphics/common2D": [
                "./@ohos.graphics.common2D.ts"
            ],
            "@ohos/graphics/drawing": [
                "./@ohos.graphics.drawing.ts"
            ],
            "@ohos/arkui/graphics": [
                "./@ohos.arkui.graphics.ts"
            ],
            "@ohos.promptAction": [
                "./@ohos.promptAction.ts"
            ],
            "@koalaui/runtime/annotations": ["../../incremental/runtime/annotations"]
        },
        "plugins": [
            {
                "transform": "@koalaui/ui-plugins/checked-stage-plugin",
                "stage": "checked",
                "name": "ui"
            },
            {
                "transform": "@koalaui/memo-plugin",
                "stage": "checked",
                "name": "memo"
            }
        ]
    },
    "include": [
        "arkui/**/*.ts",
        "./@ohos.measure.ts",
        "./@ohos.font.ts",
        "./@ohos.arkui.UIContext.ts",
        "./@ohos.animator.ts",
        "./@ohos.arkui.componentUtils.ts",
        "./@ohos.arkui.focusController.ts",
        "./@ohos.arkui.inspector.ts",
        "./global/**/*.ts",
        "./@ohos.router.ts",
        "./@ohos.arkui.observer.ts",
        "./@ohos.graphics.common2D.ts",
        "./@ohos.graphics.drawing.ts",
        "./@ohos.arkui.graphics.ts",
        "./@ohos.promptAction.ts"
    ],
    "exclude": [
        "arkui/component/ts/*",        
        "arkui/component/test_utils.ts",
        "arkui/component/main.ts",
        "arkui/external/arkts/*",
        "arkui/ani/ts/*",
        "arkui/index-test.d.ts"
    ],
    "dependencies": {
        "@koalaui/arkui-common": ["../../arkoala/arkui-common/ui2abcconfig.json"],
        "@koalaui/runtime": ["../../incremental/runtime/ui2abcconfig.json"]
    }
}
