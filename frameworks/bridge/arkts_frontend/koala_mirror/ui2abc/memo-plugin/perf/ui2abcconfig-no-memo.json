{
    "compilerOptions": {
        "package": "@perf",
        "outDir": "./build",
        "baseUrl": "./input",
        "paths": {
            "@koalaui/common": ["../../../../incremental/common/src"],
            "@koalaui/compat": ["../../../../incremental/compat/src/arkts"],
            "@koalaui/runtime": ["../../../../incremental/runtime/ets"],
            "@koalaui/runtime/annotations": ["../../../../incremental/runtime/annotations"]
        },
        "plugins": [
            {
                "transform": "@koalaui/memo-plugin",
                "state": "parsed",
                "name": "memo",
                "note": "Parsed state memo plugin takes almost no time, but adds runtime sources into compilation"
            }
        ]
    },
    "include": [
        "./input/main.ets"
    ]
}
