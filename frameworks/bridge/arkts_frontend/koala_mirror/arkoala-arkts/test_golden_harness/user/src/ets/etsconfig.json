{
    "extends": "../../../../arkui/config/etsconfig-base.json",
    "include": [
        "./**/*.ets"
    ],
    "exclude": [
        "./hello*.ets"
    ],
    "compilerOptions": {
        "types": [],
        "baseUrl": ".",
        "rootDirs": [
            "."
        ],
        "outDir": "../../build/ets-junk",
        "plugins": [
            {
                "transform": "@koalaui/ets-plugin/build/lib/src/ArkExpander.js",
                "destination": "../../build/generated",
                "arkui": "@ohos.arkui",
                "applicationInfo": {
                    "bundleName": "com.test.golden.harness",
                    "moduleName": "entry"
                 }
            }
        ],
        "paths": {
            "@ohos.*": [
                "../../../../arkui/types/@ohos.*"
            ],
            "@system.*": [
                "../../../../arkui/types/@system.*"
            ]
        }
    }
}
