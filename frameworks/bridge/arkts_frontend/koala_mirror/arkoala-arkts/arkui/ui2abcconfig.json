{
    "compilerOptions": {
        "package": "arkui",
        "outDir": "build",
        "baseUrl": "./src",
        "paths": {
            "#components": ["./generated/arkts"],
            "#stateMgmtTool": ["./stateManagement/tools/arkts"],
            "arkui.ani": ["./ani/arkts/ArkUIAniModule"],
            "@ohos.arkui.stateManagement": ["./stateManagement"],
            "@koalaui/interop": ["../../../interop/src/arkts"],
            "@koalaui/common": ["../../../incremental/common/src"],
            "@koalaui/compat": ["../../../incremental/compat/src/arkts"],
            "@koalaui/runtime": ["../../../incremental/runtime/ets"],
            "@koalaui/runtime/annotations": ["../../../incremental/runtime/annotations"],
            "@koalaui/builderLambda": ["./annotations"]
        },
        "plugins": [
            {
                "transform": "@koalaui/memo-plugin",
                "state": "parsed",
                "name": "memo"
            },
            {
                "transform": "@koalaui/memo-plugin",
                "state": "checked",
                "name": "memo"
            }
        ]
    },
    "include": [
        "./src/ani/arkts/ArkUIAniModule.ts",
        "./src/stateManagement/**/*.ts",
        "./src/**/*.ets"
    ],
    "exclude": [
        "./src/generated/ts/*.ets",
        "./src/sdk/**/*.ets"
    ]
}
