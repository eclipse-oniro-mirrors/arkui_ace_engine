import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("indexer_pattern_ng") {
  is_component_model = true
  sources = [
    "arc_indexer_content_modifier.cpp",
    "arc_indexer_layout_algorithm.cpp",
    "arc_indexer_layout_property.cpp",
    "arc_indexer_pattern.cpp",
    "indexer_accessibility_property.cpp",
    "indexer_layout_algorithm.cpp",
    "indexer_layout_property.cpp",
    "indexer_model_ng.cpp",
    "indexer_model_static.cpp",
    "indexer_pattern.cpp",
  ]

  ark_sources = [
    "bridge/arkts_native_alphabet_indexer_bridge.cpp",
    "bridge/indexer_dynamic_modifier.cpp",
    "bridge/indexer_dynamic_module.cpp",
  ]

  if (!is_arkui_x) {
    ark_sources += [ "indexer_model_impl.cpp" ]
    if (!ace_engine_feature_wearable) {
      ark_sources += [ "bridge/indexer_static_modifier.cpp" ]
    }
  }

  if (!build_ohos_sdk) {
    deps = [ "$ace_root/interfaces/inner_api/ui_session:ui_session" ]
  }
}
