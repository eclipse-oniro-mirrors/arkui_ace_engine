import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("counter_pattern_ng") {
  is_component_model = true
  sources = [
    "counter_layout_algorithm.cpp",
    "counter_model_ng.cpp",
    "counter_model_static.cpp",
    "counter_node.cpp",
  ]

  ark_sources = [
    "bridge/arkts_native_counter_bridge.cpp",
    "bridge/counter_dynamic_modifier.cpp",
    "bridge/counter_dynamic_module.cpp",
  ]

  deps = [ "$ace_root/interfaces/inner_api/ace:ace_forward_compatibility" ]

  if (!is_arkui_x) {
    ark_sources += [
      "bridge/counter_model_impl.cpp",
      "bridge/counter_static_modifier.cpp",
    ]
    if (!build_ohos_sdk) {
      deps += [
      "$ace_root/interfaces/inner_api/ui_session:ui_session",
      ]
    }
  }
}