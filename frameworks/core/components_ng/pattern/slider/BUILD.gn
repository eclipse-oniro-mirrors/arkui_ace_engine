import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("slider_pattern_ng") {
  is_component_model = true
  sources = [
    "slider_accessibility_property.cpp",
    "slider_content_modifier.cpp",
    "slider_layout_algorithm.cpp",
    "slider_model_ng.cpp",
    "slider_model_static.cpp",
    "slider_paint_method.cpp",
    "slider_pattern.cpp",
    "slider_pattern_multi_thread.cpp",
    "slider_tip_modifier.cpp",
  ]

  ark_sources = [
    "bridge/arkts_native_slider_bridge.cpp",
    "bridge/slider_dynamic_module.cpp",
    "bridge/slider_dynamic_modifier.cpp",
  ]

  if (!is_arkui_x) {
    ark_sources += [
      "bridge/slider_model_impl.cpp",
    ]

    if (!ace_engine_feature_wearable) {
      ark_sources += [
        "bridge/slider_static_modifier.cpp",
      ]
    }
  }

  if (!build_ohos_sdk) {
    deps = [
      "${ace_root}/interfaces/inner_api/ui_session:ui_session",
    ]
    if (is_ohos_standard_system) {
      external_deps = [ "accessibility:accessibility_common" ]

    }
  }

}