import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")


build_component_ng("data_panel_pattern_ng") {
  module_type = "ace_component"
  sources = [
    "data_panel_layout_algorithm.cpp",
    "data_panel_model_ng.cpp",
    "data_panel_model_static.cpp",
    "data_panel_modifier.cpp",
    "data_panel_paint_method.cpp",
    "data_panel_pattern_multi_thread.cpp",
    "data_panel_pattern.cpp",
  ]

  ark_sources = [
    "bridge/arkts_native_data_panel_bridge.cpp",
    "bridge/data_panel_dynamic_modifier.cpp",
    "bridge/data_panel_dynamic_module.cpp",
  ]

  deps = [ "$ace_root/interfaces/inner_api/ace:ace_forward_compatibility" ]

  if (!is_arkui_x) {
    if (!defined(ace_engine_feature_wearable) || !ace_engine_feature_wearable) {
      ark_sources += [ "bridge/data_panel_static_modifier.cpp" ]
    }
    ark_sources += [ "bridge/data_panel_model_impl.cpp" ]
  }
}