import("//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("checkbox_pattern_ng") {
  is_component_model = true
  sources = [
    # Checkbox
    "checkbox_accessibility_property.cpp",
    "checkbox_layout_algorithm.cpp",
    "checkbox_model_ng.cpp",
    "checkbox_model_static.cpp",
    "checkbox_paint_method.cpp",
    "checkbox_paint_property.cpp",
    "checkbox_pattern.cpp",
    "checkbox_pattern_multi_thread.cpp",

    # CheckboxGroup
    "../checkboxgroup/checkboxgroup_accessibility_property.cpp",
    "../checkboxgroup/checkboxgroup_layout_algorithm.cpp",
    "../checkboxgroup/checkboxgroup_model_ng.cpp",
    "../checkboxgroup/checkboxgroup_model_static.cpp",
    "../checkboxgroup/checkboxgroup_modifier.cpp",
    "../checkboxgroup/checkboxgroup_paint_property.cpp",
    "../checkboxgroup/checkboxgroup_pattern.cpp",
    "../checkboxgroup/checkboxgroup_pattern_multi_thread.cpp",
  ]

  ark_sources = [
    # Checkbox bridges
    "bridge/arkts_native_checkbox_bridge.cpp",
    "bridge/checkbox_dynamic_module.cpp",
    "bridge/checkbox_dynamic_modifier.cpp",

    # CheckboxGroup bridges
    "../checkboxgroup/bridge/arkts_native_checkboxgroup_bridge.cpp",
    "../checkboxgroup/bridge/checkboxgroup_dynamic_module.cpp",
    "../checkboxgroup/bridge/checkboxgroup_dynamic_modifier.cpp",
  ]

  if (!is_arkui_x) {
    ark_sources += [
      "checkbox_model_impl.cpp",
      "../checkboxgroup/checkboxgroup_model_impl.cpp",
    ]

    if (!ace_engine_feature_wearable) {
      ark_sources += [
        "bridge/checkbox_static_modifier.cpp",
        "../checkboxgroup/bridge/checkboxgroup_static_modifier.cpp",
        "../checkboxgroup/bridge/checkboxgroup_static_configuration_accessor.cpp",
      ]
    }
  }

  if (!build_ohos_sdk) {
    deps = [
      "${ace_root}/interfaces/inner_api/ui_session:ui_session",
    ]
    if (is_ohos_standard_system) {
      external_deps = [ "accessibility:accessibility_common" ]
    }
  }
}