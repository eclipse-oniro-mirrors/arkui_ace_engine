import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("rating_pattern_ng") {
  is_component_model = true
  include_generated_sources = true
  sources = [
    "rating_accessibility_property.cpp",
    "rating_layout_algorithm.cpp",
    "rating_model_ng.cpp",
    "rating_model_static.cpp",
    "rating_modifier.cpp",
    "rating_pattern.cpp",
  ]

  ark_sources = [
    "bridge/arkts_native_rating_bridge.cpp",
    "bridge/rating_dynamic_module.cpp",
    "bridge/rating_dynamic_modifier.cpp",
  ]

  if (!is_arkui_x) {
    if (!ace_engine_feature_wearable) {
      ark_sources += [
        "bridge/rating_static_modifier.cpp",
      ]
    }
  }
}