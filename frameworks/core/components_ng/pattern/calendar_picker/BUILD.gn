import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("calendar_picker_pattern_ng") {
  is_component_model = true

  if (!ace_engine_feature_wearable) {
    sources = [
      "calendar_dialog_layout_algorithm.cpp",
      "calendar_dialog_pattern.cpp",
      "calendar_dialog_view.cpp",
      "calendar_picker_layout_algorithm.cpp",
      "calendar_picker_model_ng.cpp",
      "calendar_picker_model_static.cpp",
      "calendar_picker_pattern.cpp",
    ]
  }
  
  ark_sources = [
    "bridge/arkts_native_calendar_picker_bridge.cpp",
    "bridge/arkts_native_calendar_picker_dialog_bridge.cpp",
    "bridge/calendar_picker_dialog_dynamic_modifier.cpp",
    "bridge/calendar_picker_dynamic_modifier.cpp",
    "bridge/calendar_picker_dynamic_module.cpp",
    "bridge/calendar_picker_dialog_dynamic_module.cpp",
    "bridge/calendar_picker_utils.cpp",
  ]

  if (!is_arkui_x) {
    if (!ace_engine_feature_wearable) {
      ark_sources += [
        "bridge/calendar_picker_dialog_static_modifier.cpp",
        "bridge/calendar_picker_static_modifier.cpp",
      ]
    }    
  }

  if (!build_ohos_sdk) {
    if (!is_arkui_x) {
      deps = [
        "$ace_root/interfaces/inner_api/ui_session:ui_session",
      ]
    }
  }
}


