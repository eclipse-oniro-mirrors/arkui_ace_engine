import("//foundation/arkui/ace_engine/ace_config.gni")
import("//foundation/arkui/ace_engine/build/ace_ext.gni")
import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("menu_pattern_ng") {
  is_component_model = true

  sources = [
    "menu_accessibility_property.cpp",
    "menu_layout_algorithm.cpp",
    "menu_layout_property.cpp",
    "menu_manager.cpp",
    "menu_model_ng.cpp",
    "menu_model_static.cpp",
    "menu_paint_method.cpp",
    "menu_pattern.cpp",
    "menu_view.cpp",
    "menu_view_static.cpp",
    "multi_menu_layout_algorithm.cpp",
    "sub_menu_layout_algorithm.cpp",
  ]

  # menu_item
  sources += [
    "menu_item/custom_menu_item_layout_algorithm.cpp",
    "menu_item/menu_item_accessibility_property.cpp",
    "menu_item/menu_item_layout_algorithm.cpp",
    "menu_item/menu_item_model_ng.cpp",
    "menu_item/menu_item_model_static.cpp",
    "menu_item/menu_item_model_static_multi_thread.cpp",
    "menu_item/menu_item_paint_method.cpp",
    "menu_item/menu_item_pattern.cpp",
  ]

  # menu_item_group
  sources += [
    "menu_item_group/menu_item_group_accessibility_property.cpp",
    "menu_item_group/menu_item_group_layout_algorithm.cpp",
    "menu_item_group/menu_item_group_paint_method.cpp",
    "menu_item_group/menu_item_group_pattern.cpp",
    "menu_item_group/menu_item_group_view.cpp",
    "menu_item_group/menu_item_group_view_static.cpp",
  ]

  # menu_divider
  sources += [
    "menu_divider/menu_divider_layout_algorithm.cpp",
    "menu_divider/menu_divider_modifier.cpp",
    "menu_divider/menu_divider_paint_method.cpp",
    "menu_divider/menu_divider_pattern.cpp",
  ]

  # menu_preview
  sources += [
    "preview/menu_preview_layout_algorithm.cpp",
    "preview/menu_preview_pattern.cpp",
  ]
  
  ark_sources = [
    "bridge/menu/arkts_native_menu_bridge.cpp",
    "bridge/menu/menu_dynamic_modifier.cpp",
    "bridge/menu/menu_dynamic_module.cpp",
    "bridge/menu_item/arkts_native_menu_item_bridge.cpp",
    "bridge/menu_item/menu_item_dynamic_modifier.cpp",
    "bridge/menu_item/menu_item_dynamic_module.cpp",
    "bridge/menu_item_group/arkts_native_menu_item_group_bridge.cpp",
    "bridge/menu_item_group/menu_item_group_dynamic_modifier.cpp",
    "bridge/menu_item_group/menu_item_group_dynamic_module.cpp",
    "bridge/inner_modifier/menu_inner_modifier.cpp",
    "bridge/inner_modifier/menu_view_inner_modifier.cpp",
    "bridge/inner_modifier/menu_manager_inner_modifier.cpp",
    "bridge/inner_modifier/menu_item_inner_modifier.cpp",
    "bridge/inner_modifier/menu_item_group_inner_modifier.cpp",
  ]

  if (!ace_engine_feature_wearable) {
    ark_sources += [
      "bridge/menu/menu_static_modifier.cpp",
      "bridge/menu/menu_static_context_menu_accessor.cpp",
      "bridge/menu_item/menu_item_static_modifier.cpp",
      "bridge/menu_item/menu_item_static_configuration_accessor.cpp",
      "bridge/menu_item_group/menu_item_group_static_modifier.cpp",
    ]
  }

  if (!build_ohos_sdk) {
    if (!is_arkui_x) {
      deps = [
        "${ace_root}/interfaces/inner_api/ui_session:ui_session",
      ]
    }
    if (is_ohos_standard_system) {
      external_deps = [
        "accessibility:accessibility_common",
        "ability_base:want",
        ]
    }
  }
}


