import(
    "//foundation/arkui/ace_engine/frameworks/core/components_ng/components.gni")

build_component_ng("stepper_pattern_ng") {
  is_component_model = true
  include_generated_sources = true
  sources = [
    # Stepper
    "stepper_accessibility_property.cpp",
    "stepper_layout_algorithm.cpp",
    "stepper_model_ng.cpp",
    "stepper_model_static.cpp",
    "stepper_node.cpp",
    "stepper_pattern.cpp",

    # StepperItem
    "stepper_item_model_ng.cpp",
    "stepper_item_model_static.cpp",
  ]

  ark_sources = [
    # Stepper bridges
    "bridge/arkts_native_stepper_bridge.cpp",
    "bridge/stepper_dynamic_modifier.cpp",
    "bridge/stepper_dynamic_module.cpp",

    # StepperItem bridges
    "bridge/arkts_native_stepper_item_bridge.cpp",
    "bridge/stepper_item_dynamic_modifier.cpp",
    "bridge/stepper_item_dynamic_module.cpp",
  ]

  if (!is_arkui_x && !ace_engine_feature_wearable) {
    ark_sources += [
     "bridge/stepper_item_static_modifier.cpp",
     "bridge/stepper_static_modifier.cpp",
    ]
  }
}
