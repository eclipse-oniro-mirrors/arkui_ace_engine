        "bridge/waterflow/water_flow_static_ani_modifier.cpp",
        "bridge/waterflow/water_flow_static_modifier.cpp",
        "bridge/waterflow/water_flow_static_sections_accessor.cpp",
      ]
    }
    ark_sources += [
      "bridge/flowitem/water_flow_item_model_impl.cpp",
      "bridge/waterflow/water_flow_model_impl.cpp",
    ]
  }
  if (!build_ohos_sdk && !is_arkui_x) {
    deps = [
      "$ace_root/interfaces/inner_api/ui_session:ui_session",
    ]
  }
}