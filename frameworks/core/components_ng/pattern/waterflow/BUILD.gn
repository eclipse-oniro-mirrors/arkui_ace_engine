  sources = [
    "layout/sliding_window/water_flow_layout_info_sw.cpp",
    "layout/sliding_window/water_flow_layout_sw.cpp",
    "layout/top_down/water_flow_layout_algorithm.cpp",
    "layout/top_down/water_flow_layout_info.cpp",
    "layout/top_down/water_flow_segmented_layout.cpp",
    "layout/water_flow_layout_algorithm_base.cpp",
    "layout/water_flow_layout_info_base.cpp",
    "layout/water_flow_layout_utils.cpp",
    "water_flow_accessibility_property.cpp",
    "water_flow_content_modifier.cpp",
    "water_flow_item_model_ng.cpp",
    "water_flow_item_node.cpp",
    "water_flow_layout_property.cpp",
    "water_flow_model_ng.cpp",
    "water_flow_model_ng_multi_thread.cpp",
    "water_flow_model_static.cpp",
    "water_flow_paint_method.cpp",
    "water_flow_pattern.cpp",
    "water_flow_sections.cpp",
  ]

  ark_sources = [
    "bridge/flowitem/arkts_native_water_flow_item_bridge.cpp",
