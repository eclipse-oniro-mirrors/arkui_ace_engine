import("//build/test.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import("//foundation/arkui/ace_engine/test/unittest/ace_unittest.gni")

config("uiservicems_config") {
  include_dirs = [
    "$ace_root/adapter/ohos/services/uiservice/include",
    "$ace_root/interfaces/inner_api/ui_service_manager/include",
  ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
}

ohos_unittest("statistic_event_test") {
  module_out_path = "$basic_test_output_path"

  sources = [
    "$ace_root/adapter/ohos/services/uiservice/src/common_statistic_event.cpp",
    "$ace_root/adapter/ohos/services/uiservice/src/statistic_event_manager.cpp",
    "$ace_root/adapter/ohos/services/uiservice/src/ui_service_statistic_event.cpp",
    "$ace_root/frameworks/core/common/statistic_event_reporter.cpp",
    "$ace_root/test/mock/adapter/mock_statistic_event_adapter.cpp",
    "$ace_root/test/mock/core/common/mock_ace_application_info.cpp",
    "statistic_event_manager_test.cpp",
    "statistic_event_reporter_test.cpp",
  ]
  deps = [
    "$ace_root/test/unittest:ace_unittest_log",
  ]
  external_deps = [
    "cJSON:cjson",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "googletest:gmock_main",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "init:libbegetutil",
  ]
  configs = [
    ":uiservicems_config",
    "$ace_root/test/unittest:ace_unittest_config",
  ]
}
