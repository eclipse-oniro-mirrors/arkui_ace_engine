import("//build/test.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import(
    "//foundation/arkui/ace_engine/adapter/ohos/test/unittest/entrance/entrance.gni")

ohos_unittest("EntranceUtilsTest") {
  module_out_path = "$entrance_root_path/entrance_utils_test"
  include_dirs = [
    "$entrance_mock_path",
    "$ace_root/adapter/ohos/entrance/",
  ]
  sources = [ "entrance_utils_test.cpp" ]

  configs = [ "$ace_root:ace_test_config" ]

  public_deps = [ "//foundation/arkui/ace_engine/adapter/ohos/entrance:ace_ohos_standard_entrance" ]

  deps = [
    "$ace_flutter_engine_root:third_party_flutter_engine_ohos",
    "$ace_root/adapter/ohos/osal:ace_osal_ohos",
    "$ace_root/frameworks/base:ace_base_ohos",
    "$ace_root/frameworks/bridge:framework_bridge_ohos",
    "$ace_root/frameworks/core:ace_core_ohos",
  ]
  part_name = ace_engine_part
}

group("unittest") {
  testonly = true
  deps = [ ":EntranceUtilsTest" ]
}
