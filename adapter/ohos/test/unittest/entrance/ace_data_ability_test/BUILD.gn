import("//build/test.gni")
import("//foundation/ability/ability_base/ability_base.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import(
    "//foundation/arkui/ace_engine/adapter/ohos/test/unittest/entrance/entrance.gni")

ohos_unittest("AceDataAbilityTest") {
  module_out_path = "$entrance_root_path/ace_data_ability_test"

  include_dirs = [
    "$entrance_mock_path",
    "$ace_root/adapter/ohos/entrance/",
    "${relational_store_napi_path}/rdb/include",
    "${ability_base_kits_native_path}/want/include",
    "${ability_base_kits_native_path}/appkit/app",
  ]

  sources = [ "ace_data_ability_test.cpp" ]
  configs = [ "$ace_root:ace_test_config" ]

  public_deps = [ "//foundation/arkui/ace_engine/adapter/ohos/entrance:ace_ohos_standard_entrance" ]

  deps = [
    "$ace_root/adapter/ohos/osal:ace_osal_ohos",
    "$ace_root/frameworks/base:ace_base_ohos",
    "$ace_root/frameworks/bridge:framework_bridge_ohos",
    "$ace_root/frameworks/core:ace_core_ohos",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:abilitykit_native",
    "ability_runtime:data_ability_helper",
    "bundle_framework:appexecfwk_base",
    "relational_store:native_dataability",
    "relational_store:native_rdb",
    "relational_store:rdb_data_share_adapter",
  ]

  part_name = ace_engine_part
}

group("unittest") {
  testonly = true
  deps = [ ":AceDataAbilityTest" ]
}
