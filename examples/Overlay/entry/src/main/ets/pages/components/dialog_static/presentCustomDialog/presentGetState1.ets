@Entry
@Component
struct Index {
  private ctx: UIContext = this.getUIContext();
  private promptAction: PromptAction = this.ctx.getPromptAction();
  private dialogController: promptAction.DialogController = new promptAction.DialogController();
  private customDialogComponentId: number = 0;

  @Builder
  customDialogComponent() {
    Column() {
      Column({ space: 10 } as ColumnOptions) {
        Button("关闭弹窗").onClick(() => {
          this.dialogController!.close();
          console.info('presentCustomDialog state:' + this.dialogController?.getState()); // 打印弹窗状态
        })
        Button('点我获取状态')
          .onClick(() => {
            console.info('presentCustomDialog state:' + this.dialogController?.getState()); // 打印弹窗状态
          })
      }
    }.height(200).padding(5).justifyContent(FlexAlign.SpaceBetween)
  }

  build() {
    Row() {
      Column() {
        Button('presentCustomDialog')
          .fontSize(20)
          .onClick(() => {
            this.promptAction.presentCustomDialog(() => {
              this.customDialogComponent()
            }, this.dialogController, {
              transition: TransitionEffect.OPACITY.animation({
                duration: 3000
              }) as TransitionEffect
            },)

          })
        Button('点我查询弹窗状态')
          .onClick(() => {
            console.info('presentCustomDialog state:' + this.dialogController?.getState())
          }).margin(20)
      }
      .width('100%')
      .height('100%')
    }
    .height('100%')
  }
}